<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- added this line for pie chart -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script> 
  <!-- Bootstrap CSS -->
  <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <title>Skills App</title>
  <style>
        /* styling the navigation bar */
        .navbar {
            font-family: 'Montserrat', sans-serif;
            background-color: lightblue;
            overflow: hidden;
        }

        /* styling the navigation bar items */
        .navbar a { 
            float: left;  
            font-size: 20px;
            color: black;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
        }

        /* style items in nav bar, color change upon hover */
        .nav-link:hover {
            color: whitesmoke;
        }
        #linkers {
            font-family: 'Montserrat', sans-serif;
            font-size: x-large;
            color: rgba(140, 2, 140, 0.66);
        }
        /* Added below codes for JS dynamic pie chart styling */
        .chart-container {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 200px; /* width */
            height: 200px; /* height  */
            margin: auto; /* for centering container */
        }
        .btntheme {
            margin-top: 8px;
            margin-right: 16px;
            background-color: #d8bfd8;
            border: solid black;
            font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
            text-align: center;
            display: inline-block;
            font-size: 10px;
            cursor: pointer;
        }
        .btntheme:hover {
            color: whitesmoke;
        }
        .app:hover {
            cursor: pointer;
        }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-sm">
    <div class="container-fluid">
        <a class="navbar-brand" href="/"><img src="/images/app.png" class="app" width="50"></a>
        <!---added the navbar toggle button back in, i accidentally took it out before submission-->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>
      <button id="btnChangeTheme" class="btntheme">Theme</button>
  </nav>
    
    <div class="container">
        <br>
        <div class="text-center"><h2><%= user.username %> details</h2></div>
        <br>
        <% if (user) { %> <!-- Check if user data exists -->
            <div>
                <p><b>username:</b><br> <%= user.username %></p>
                <p><b>profile picture:</b><br> <img src = "/images/<%= user.profile_pic %>" width="20%"></p>
                <p><b>Skillsets:</b><br> <%= user.biography %></p>
                <p><b>Dob:</b><br> <%= user.dob_format %></p>
                <p><b>Contact:</b><br> <%= user.contact %></p>
                


                <div>
                    <form action="/likes/<%= user.account_id %>" method="POST" style="display: inline;">
                        <button type="submit" class="btn btn-link like-btn">
                            <img src="/images/like.png" width="40">
                        </button>
                    </form>
                </div>
                <p><b>Total likes:</b> <%= user.likes %></p>

            
                <% if (loggedInUserId === user.account_id) { %>
                    <tr>
                        <td id="linkers"><a href="/edituser/<%= user.account_id %>"><img src="/images/edit.png" width="24"></a></td>
                        
                        <td id="linkers"><a href="/deleteuser/<%= user.account_id %>" onclick="return confirm('Are you sure you want to delete your account?')"><img src="/images/delete.png" width="24"></a></td>
                    </tr>
                    <% } %>
                <br></br>
                <h2>Points Dashboard Pie Chart:</h2>
                <p><b>Points:</b><br> <%= user.points %></p>
                <br>
                <div class="chart-container">
                    <canvas id="DashboardPieChart"></canvas>
                  </div>
                  <script>
                      document.addEventListener('DOMContentLoaded', (event) => {
                          var points = "<%= JSON.stringify(user.points) %>";
                          var ctx = document.getElementById('DashboardPieChart').getContext('2d');
                          var myPieChart = new Chart(ctx, {
                              type: 'pie',
                              data: {
                                  labels: ['Points', 'Remaining'],
                                  datasets: [{
                                      data: [points, 100-points],
                                      backgroundColor: [
                                          'rgba(255, 99, 132, 0.2)',
                                          'rgba(54, 162, 235, 0.2)'
                                      ],
                                      borderColor: [
                                          'rgba(255, 99, 132, 1)',
                                          'rgba(54, 162, 235, 1)'
                                      ],
                                      borderWidth: 1
                                  }]
                              },
                              options: {
                                  responsive: false,
                                  maintainAspectRatio: false,
                                  plugins: {
                                      legend: {
                                          position: 'top',
                                      },
                                      tooltip: {
                                          callbacks: {
                                              label: function(context) {
                                                  let label = context.label || '';
                                                  if (label) {
                                                      label += ': ';
                                                  }
                                                  label += context.raw;
                                                  return label;
                                              }
                                          }
                                      }
                                  }
                              }
                          });
                      });
                  </script>
              </div>
        <% } else { %>
            <p>No user found.</p> 
        <% } %>
        <a href ="/"><img src="/images/back.jpg" width="24"></a>
    </div>
    
    <script>
        document.getElementById("btnChangeTheme").addEventListener('click', () => {
            document.body.style.backgroundColor = document.body.style.backgroundColor === 'lightgrey' ? 'white' : 'lightgrey';
    
        });
    </script>
</body>
</html>
